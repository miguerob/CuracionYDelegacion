CREATE TABLE users (
  id TEXT PRIMARY KEY,
  account TEXT NOT NULL,
  hash TEXT NOT NULL,
  ip TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  admin BOOLEAN,
  curator BOOLEAN
);

CREATE TABLE blacklist (
  id TEXT PRIMARY KEY,
  user TEXT NOT NULL,
  reason TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  account TEXT NOT NULL
);

CREATE TABLE upvotes (
  id TEXT PRIMARY KEY,
  account TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  link TEXT NOT NULL,
  user TEXT NOT NULL,
  category TEXT NOT NULL,
  slug TEXT NOT NULL,
  title TEXT NOT NULL,
  type NUMERIC,
  payout TIMESTAMP NOT NULL,
  status TEXT NOT NULL,
  vote_time TIMESTAMP,
  reward_sbd TEXT NOT NULL,
  reward_sp TEXT NOT NULL
);

CREATE TABLE downvotes (
  id TEXT PRIMARY KEY,
  account TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  reason TEXT NOT NULL,
  link TEXT NOT NULL,
  user TEXT NOT NULL,
  category TEXT NOT NULL,
  slug TEXT NOT NULL,
  title TEXT NOT NULL,
  type NUMERIC,
  payout TIMESTAMP NOT NULL,
  reward NUMERIC,
  maxi NUMERIC,
  status TEXT NOT NULL
);

CREATE TABLE upvote_notifications (
  id TEXT PRIMARY KEY,
  user TEXT NOT NULL,
  reason TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL
);

CREATE TABLE delegators (
  account TEXT PRIMARY KEY,
  created TIMESTAMP NOT NULL
);

CREATE TABLE rewards(
  account TEXT PRIMARY KEY,
  sp NUMERIC NOT NULL
);

CREATE TABLE reward_payouts(
  account TEXT NOT NULL,
  created TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  amount NUMERIC NOT NULL
);

CREATE TABLE last_check (
  rewards_block TEXT NOT NULL
);
